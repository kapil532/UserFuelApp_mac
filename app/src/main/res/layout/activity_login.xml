<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_color_background"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appbar329"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFF"
                app:elevation="0dp"
                android:theme="@style/AppTheme.AppBarOverlay">

                <androidx.appcompat.widget.Toolbar
                    android:visibility="visible"
                    android:id="@+id/toolbar329"
                    android:layout_width="match_parent"
                    app:contentInsetLeft="0dp"
                    app:contentInsetStart="0dp"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_weight="1"
                    app:popupTheme="@style/AppTheme.PopupOverlay"
                    app:title="@string/app_name">

                    <!--?attr/colorPrimary-->

                    <LinearLayout
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <!--<ImageView
                            android:id="@+id/buncT"
                            style="@style/logo"
                            android:layout_marginEnd="@dimen/bunc_logo_start_margin"/>-->

                        <!--<ImageView
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_clear_all_black_24dp"
                        android:layout_gravity="center|end"
                        android:layout_weight="0.3"/>-->

                    </LinearLayout>

                </androidx.appcompat.widget.Toolbar>

            </com.google.android.material.appbar.AppBarLayout>

            <packag.nnk.com.userfuelapp.ui.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/welcomeTextTT"
                android:layout_marginStart="@dimen/dimen_10dp"
                android:layout_marginTop="40dp"
                android:text="Welcome Guest!"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="22sp"
                android:layout_gravity="start"/>

            <packag.nnk.com.userfuelapp.ui.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pleaseLogin"
                android:layout_marginStart="@dimen/dimen_10dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:text="What's your phone number?"
                android:textColor="#000"
                android:textSize="14sp"
                android:layout_gravity="start"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/background_login">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="22dp"
                    android:weightSum="1">

                    <!--<android.support.design.widget.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:visibility="gone"
                        android:layout_marginStart="10dp"
                        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
                        android:theme="@style/TextLabel">

                    </android.support.design.widget.TextInputLayout>-->

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:visibility="visible"
                        android:layout_marginStart="10dp"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:hint="+91"
                        android:id="@+id/codeET"
                        android:textSize="13sp"
                        android:inputType="phone"/>

                    <!--<android.support.design.widget.TextInputLayout
                        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
                        android:theme="@style/TextLabel"
                        android:id="@+id/phoneTextLayout329">

                    </android.support.design.widget.TextInputLayout>-->

                    <EditText
                        android:id="@+id/signupMobile329"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_10dp"
                        android:layout_weight="0.8"
                        android:digits="0123456789"
                        android:hint="Enter your mobile number"
                        android:inputType="phone"
                        android:maxLength="10"
                        android:textSize="13sp" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/editPhone329"
                        android:layout_weight="0.1"
                        android:visibility="gone"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_edit_black_24dp"/>

                    <TextView
                        android:id="@+id/verified"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_verifed1"
                        android:visibility="gone" />

                </LinearLayout>

                <!--<ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="11dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="10dp"
                    android:background="#777575"/>-->

                <packag.nnk.com.userfuelapp.ui.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="We'll Send 4-digit code to verify your phone"
                    android:textColor="#D8CFCF"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:id="@+id/tv8329"
                    android:layout_gravity="start"
                    android:textSize="12sp"
                    android:layout_marginStart="16dp"/>

                <Button
                    android:id="@+id/getOtpButton329"
                    style="@style/all_button_style"
                    android:layout_marginTop="35dp"
                    android:background="@drawable/light_button_background"
                    android:text="Get OTP" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp"
                    android:id="@+id/otpLayout329"
                    android:visibility="gone"
                    android:weightSum="1">

                    <packag.nnk.com.userfuelapp.ui.OtpEdittextClass
                        android:id="@+id/et_otp"
                        android:layout_width="260dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:cursorVisible="false"
                        android:digits="1234567890"
                        android:inputType="number"
                        android:maxLength="4"
                        android:textIsSelectable="false"
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        android:layout_margin="20dp"
                        android:textSize="13sp"
                        android:layout_gravity="center"
                        android:id="@+id/resendOtp329"
                        android:textColor="@color/b"
                        android:text="Re-send OTP"/>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_shape"
                        android:visibility="visible"
                        android:id="@+id/signUpButtonn329"
                        android:textColor="#fff"
                        android:text="Sign In"
                        android:layout_margin="8dp"
                        android:layout_marginTop="10dp"/>


                </LinearLayout>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Don't Have an account? Sign Up here!"
                    android:visibility="gone"
                    android:id="@+id/signInnTT"
                    android:layout_gravity="center"
                    android:textSize="14sp"
                    android:layout_marginTop="16dp"/>

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>