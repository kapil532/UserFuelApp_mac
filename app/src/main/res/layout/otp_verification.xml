<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:id="@+id/otpLayout329"
        android:visibility="visible"
        android:weightSum="1">



        <packag.nnk.com.userfuelapp.ui.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/welcomeTextTT"
            android:layout_marginStart="@dimen/dimen_10dp"
            android:layout_marginTop="40dp"
            android:text="OTP Verification"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="22sp"
            android:layout_gravity="start"/>

        <packag.nnk.com.userfuelapp.ui.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pleaseLogin"
            android:layout_marginStart="@dimen/dimen_10dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:text="Enter your four digit OTP send to your registered mobile"
            android:textColor="#000"
            android:textSize="14sp"
            android:focusable="true"
            android:layout_gravity="start"/>

        <packag.nnk.com.userfuelapp.ui.OtpEdittextClass
            android:id="@+id/et_otp"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:cursorVisible="false"
            android:digits="1234567890"
            android:inputType="number"
            android:maxLength="4"
            android:textIsSelectable="false"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_margin="20dp"
            android:textSize="13sp"
            android:layout_gravity="center"
            android:id="@+id/resendOtp329"
            android:textColor="@color/b"
            android:text="Re-send OTP"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_shape"
            android:visibility="visible"
            android:id="@+id/signUpButtonn329"
            android:textColor="#fff"
            android:text="VERIFY"
            android:layout_margin="8dp"
            android:layout_marginTop="10dp"/>


    </LinearLayout>
</LinearLayout>